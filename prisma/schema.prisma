datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id           Int       @id @default(autoincrement())
  fullName     String
  email        String    @unique 
  phoneNumber  String?   
  role         Role      @default(STUDENT) 
  department   String?  
  avatarUrl    String?  
  bio          String? 
  skills       String[]  
  matricNumber String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt


}


enum Role {
  STUDENT
  STAFF
  ADMIN
}


